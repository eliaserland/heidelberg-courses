{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"${file}",
				"-o",
                                "${fileDirname}/${fileBasenameNoExtension}",
                                "-lm"
			],
			"presentation": {
				"clear": true 	// Will clear the terminal
			},
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}